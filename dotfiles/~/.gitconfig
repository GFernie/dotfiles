[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[user]
	name = Gary Fernie
	email = gary.fernie@skyscanner.net
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = false
[gpg]
	program = gpg
[init]
	defaultBranch = main
